@section Title{
    <title>Modifier Traduction</title>
}
@model Application_visa.Models.Traduction
<div class="col-12">
    <h2 class="mb-2">Traduction</h2>
    <p>Modifier une Traduction</p>
    <span style="color:red">@ViewData["erorPrix"]</span>
    <form method="post" action="#" enctype="multipart/form-data">
        <div class="row justify-content-center col-12">

            <div class="col-lg-6">
                <div class="form-group">
                    <label class="mb-0">Nom</label>
                    <input class="form-control" type="text" asp-for="nom" placeholder=" " readonly>
                    <span asp-validation-for="nom"></span>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    <label class="mb-0">Prenom</label>
                    <input class="form-control" type="text" asp-for="prenom" placeholder=" " readonly>
                    <span asp-validation-for="prenom"></span>
                </div>
            </div>
        </div>

        <div class="row justify-content-center col-12">
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="mb-0">Telephome</label>
                    <input class="form-control" type="text" asp-for="tele" placeholder=" " readonly>
                    <span asp-validation-for="tele"></span>

                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="mb-0">CIN</label>
                    <input class="form-control" type="text" asp-for="cin" placeholder=" " readonly>
                    <span asp-validation-for="cin"></span>

                </div>
            </div>
        </div>
        <div class="row justify-content-center"> 
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="mb-0">Document</label>
                        <a class="form-control" href="~/scans/@Model.scan">scan de document</a>
                        <span asp-validation-for="file"></span>
                    </div>
                </div>
            @if (Model.scan1 == "")
            {
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="mb-0">Document</label>
                        <input class="form-control" type="file" asp-for="file_1" placeholder=" ">
                        <span asp-validation-for="file_1"></span>
                    </div>
                </div>
            }
            else
            {
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="mb-0">Document</label>
                        <input class="form-control" type="hidden" asp-for="scan" placeholder=" ">
                        <a class="form-control" href="~/scans/@Model.scan1">scan de document</a>
                        <span asp-validation-for="file_1"></span>
                    </div>
                </div>
            }
            @if (Model.ami_khaled == false)
            {
                @if (Model.prix < Model.total)
                {
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="mb-0">Prix</label>
                            <input class="form-control" type="number" asp-for="prix" placeholder=" ">
                            <span asp-validation-for="prix"></span>
                        </div>
                    </div>
                }
                @if (Model.prix == Model.total)
                {
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="mb-0">Prix</label>
                            <input class="form-control" type="number" asp-for="prix" placeholder=" " readonly>
                            <span asp-validation-for="prix"></span>
                        </div>
                    </div>
                }
            }
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="mb-0">Total</label>
                    <input class="form-control" type="number" asp-for="total" placeholder=" " readonly>
                    <span asp-validation-for="total"></span>

                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Modifier</button>
        <p>@ViewBag.message</p>
    </form>
</div>
<script src="~/assets/js/amieKhalid.js"></script>